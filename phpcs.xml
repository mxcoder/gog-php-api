<?xml version="1.0"?>
<ruleset name="GumGum Dashboard">
    <description>Coding standard for gog-php-api project.</description>
    <rule ref="PSR2">
        <exclude name="Generic.Files.LineLength"/>
    </rule>
    <rule ref="Squiz.PHP.DiscouragedFunctions"/>
    <rule ref="Squiz.PHP.LowercasePHPFunctions"/>
    <rule ref="Generic.Strings.UnnecessaryStringConcat"/>
    <rule ref="Generic.WhiteSpace.ScopeIndent"/>
    <rule ref="Internal.NoCodeFound"><severity>0</severity></rule>
    <rule ref="PSR2.Methods.MethodDeclaration.Underscore"><severity>0</severity></rule>
    <!-- Excluded paths -->
    <exclude-pattern>/vendor/*</exclude-pattern>
    <exclude-pattern>/tmp/*</exclude-pattern>
    <exclude-pattern>/api/config/propel-runtime.php</exclude-pattern>
    <exclude-pattern>/tests/_support/ApiTester.php</exclude-pattern>
</ruleset>
